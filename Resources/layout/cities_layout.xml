<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<TextView
		android:text="@string/textview_city_ostrava"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minWidth="25px"
		android:minHeight="25px"
		android:textSize="40sp"
		android:gravity="center_horizontal"
		android:layout_margin="10dp"
		android:id="@+id/textViewOstrava" />
	<TextView
		android:text="@string/textview_city_rovaniemi"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minWidth="25px"
		android:minHeight="25px"
		android:textSize="40sp"
		android:gravity="center_horizontal"
		android:layout_margin="10dp"
		android:id="@+id/textViewRovaniemi" />
	<TextView
		android:text="@string/textview_city_rome"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minWidth="25px"
		android:minHeight="25px"
		android:textSize="40sp"
		android:gravity="center_horizontal"
		android:layout_margin="10dp"
		android:id="@+id/textViewRome" />
	<TextView
		android:text="@string/textview_city_sydney"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minWidth="25px"
		android:minHeight="25px"
		android:textSize="40sp"
		android:gravity="center_horizontal"
		android:layout_margin="10dp"
		android:id="@+id/textViewSydney" />
	<TextView
		android:text="@string/textview_city_reykjavik"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minWidth="25px"
		android:minHeight="25px"
		android:textSize="40sp"
		android:gravity="center_horizontal"
		android:layout_margin="10dp"
		android:id="@+id/textViewReykjavik" />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:textSize="40sp"
		android:layout_marginHorizontal="50dp"
        android:id="@+id/textInputSearch" />
    <Button
        android:text="Search"
		android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:width="200dp"
		android:height="80dp"
		android:textSize="30sp"		
        android:id="@+id/buttonSearch" />
</LinearLayout>
